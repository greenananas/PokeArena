<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.AmbientLight?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.StackPane?>

<AnchorPane fx:id="backgroundFight" maxHeight="720.0"
	maxWidth="1280.0" prefHeight="720.0" prefWidth="1280.0"
	styleClass="backgroundFight" stylesheets="@application.css"
	xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/16"
	fx:controller="Controller.FightController">
	<children>
		<BorderPane AnchorPane.bottomAnchor="0.0"
			AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
			AnchorPane.topAnchor="0.0">
			<center>
				<StackPane prefHeight="150.0" prefWidth="200.0"
					BorderPane.alignment="CENTER">
					<children>
						<ImageView fx:id="battleGround" fitHeight="566.0"
							fitWidth="1006.0" preserveRatio="true" styleClass="battleGround">
							<image>
								<Image url="@../Resources/battleGround.png" />
							</image>
						</ImageView>
						<GridPane alignment="CENTER" StackPane.alignment="CENTER">
							<columnConstraints>
								<ColumnConstraints hgrow="SOMETIMES"
									minWidth="10.0" prefWidth="100.0" />
								<ColumnConstraints hgrow="SOMETIMES"
									minWidth="10.0" prefWidth="100.0" />
							</columnConstraints>
							<rowConstraints>
								<RowConstraints minHeight="10.0"
									prefHeight="30.0" vgrow="SOMETIMES" />
								<RowConstraints minHeight="10.0"
									prefHeight="30.0" vgrow="SOMETIMES" />
								<RowConstraints minHeight="10.0"
									prefHeight="30.0" vgrow="SOMETIMES" />
							</rowConstraints>
							<children>
								<ImageView fitHeight="308.0" fitWidth="312.0"
									pickOnBounds="true" preserveRatio="true"
									GridPane.halignment="CENTER" GridPane.rowIndex="2">
									<image>
										<Image url="@../Resources/Sprites/back/1.png" />
									</image>
								</ImageView>
								<ImageView fitHeight="438.0" fitWidth="454.0"
									pickOnBounds="true" preserveRatio="true"
									GridPane.columnIndex="1" GridPane.halignment="LEFT"
									GridPane.rowIndex="1" GridPane.valignment="CENTER">
									<GridPane.margin>
										<Insets />
									</GridPane.margin>
									<image>
										<Image url="@../Resources/Sprites/frontFrame1/4.png" />
									</image>
								</ImageView>
								<Button fx:id="darkModeButton" mnemonicParsing="false"
									onAction="#handleDarkModeButton" prefHeight="44.0"
									prefWidth="100.0" text="Mode nuit" GridPane.columnIndex="1"
									GridPane.halignment="RIGHT" GridPane.valignment="TOP">
									<GridPane.margin>
										<Insets right="15.0" top="30.0" />
									</GridPane.margin>
								</Button>
								<Button fx:id="quitButton" mnemonicParsing="false"
									onAction="#handleQuitButton" prefHeight="44.0"
									prefWidth="100.0" text="Quitter" GridPane.columnIndex="1"
									GridPane.halignment="RIGHT" GridPane.valignment="CENTER">
									<GridPane.margin>
										<Insets right="15.0" top="10.0" />
									</GridPane.margin>
								</Button>
								<ImageView fx:id="imageLogo" fitHeight="110.0"
									fitWidth="158.0" pickOnBounds="true" preserveRatio="true"
									GridPane.halignment="LEFT" GridPane.valignment="BASELINE">
									<image>
										<Image url="@../Resources/logoPokeArena.png" />
									</image>
									<GridPane.margin>
										<Insets left="5.0" top="30.0" />
									</GridPane.margin>
								</ImageView>
								<Button fx:id="returnButton" mnemonicParsing="false"
									onAction="#handleReturnButton" text="Retour" visible="false"
									GridPane.halignment="LEFT" GridPane.rowIndex="2"
									GridPane.valignment="BOTTOM">
									<GridPane.margin>
										<Insets left="30.0" />
									</GridPane.margin>
								</Button>
							</children>
						</GridPane>
					</children>
				</StackPane>
			</center>
			<bottom>
				<StackPane prefHeight="150.0" prefWidth="200.0"
					BorderPane.alignment="CENTER">
					<children>
						<GridPane fx:id="gridChoice" prefHeight="163.0"
							prefWidth="1280.0">
							<columnConstraints>
								<ColumnConstraints hgrow="SOMETIMES"
									minWidth="10.0" prefWidth="100.0" />
								<ColumnConstraints hgrow="SOMETIMES"
									minWidth="10.0" prefWidth="100.0" />
							</columnConstraints>
							<rowConstraints>
								<RowConstraints minHeight="10.0"
									prefHeight="30.0" vgrow="SOMETIMES" />
							</rowConstraints>
							<children>
								<ImageView fx:id="attackButton"
									accessibleRole="BUTTON" fitHeight="130.0"
									onMouseClicked="#handleAttackButton" pickOnBounds="true"
									preserveRatio="true" GridPane.halignment="RIGHT"
									GridPane.valignment="TOP">
									<image>
										<Image url="@../Resources/Buttons/Others/attack.png" />
									</image>
									<GridPane.margin>
										<Insets right="30.0" top="5.0" />
									</GridPane.margin>
								</ImageView>
								<ImageView fx:id="pokemonButton"
									accessibleRole="BUTTON" fitHeight="130.0"
									onMouseClicked="#handlePokemonButton" pickOnBounds="true"
									preserveRatio="true" GridPane.columnIndex="1"
									GridPane.halignment="LEFT" GridPane.valignment="TOP">
									<image>
										<Image url="@../Resources/Buttons/Others/pokemon.png" />
									</image>
									<GridPane.margin>
										<Insets left="30.0" top="5.0" />
									</GridPane.margin>
								</ImageView>
							</children>
						</GridPane>
						<HBox fx:id="attackHbox" alignment="CENTER"
							prefHeight="100.0" prefWidth="500.0" visible="false"
							StackPane.alignment="CENTER">
							<children>
								<ImageView fitHeight="150.0" fitWidth="250.0"
									pickOnBounds="true" preserveRatio="true">
									<image>
										<Image url="@../Resources/Buttons/Types/dragon.png" />
									</image>
									<HBox.margin>
										<Insets right="10.0" />
									</HBox.margin>
								</ImageView>
								<ImageView fitHeight="150.0" fitWidth="250.0"
									pickOnBounds="true" preserveRatio="true">
									<image>
										<Image url="@../Resources/Buttons/Types/electrik.png" />
									</image>
									<HBox.margin>
										<Insets right="10.0" />
									</HBox.margin>
								</ImageView>
								<ImageView fitHeight="150.0" fitWidth="250.0"
									pickOnBounds="true" preserveRatio="true">
									<image>
										<Image url="@../Resources/Buttons/Types/electrik.png" />
									</image>
									<HBox.margin>
										<Insets right="10.0" />
									</HBox.margin>
								</ImageView>
								<ImageView fitHeight="150.0" fitWidth="250.0"
									pickOnBounds="true" preserveRatio="true">
									<image>
										<Image url="@../Resources/Buttons/Types/normal.png" />
									</image>
								</ImageView>
							</children>
						</HBox>
						<HBox fx:id="pokemonHbox" alignment="CENTER"
							prefHeight="100.0" prefWidth="500.0" visible="false">
							<children>
								<ImageView fitHeight="150.0" fitWidth="250.0"
									pickOnBounds="true" preserveRatio="true">
									<image>
										<Image url="@../Resources/Buttons/Types/dragon.png" />
									</image>
									<HBox.margin>
										<Insets right="10.0" />
									</HBox.margin>
								</ImageView>
								<ImageView fitHeight="150.0" fitWidth="250.0"
									pickOnBounds="true" preserveRatio="true">
									<image>
										<Image url="@../Resources/Buttons/Types/electrik.png" />
									</image>
									<HBox.margin>
										<Insets right="10.0" />
									</HBox.margin>
								</ImageView>
								<ImageView fitHeight="150.0" fitWidth="250.0"
									pickOnBounds="true" preserveRatio="true">
									<image>
										<Image url="@../Resources/Buttons/Types/electrik.png" />
									</image>
									<HBox.margin>
										<Insets right="10.0" />
									</HBox.margin>
								</ImageView>
								<ImageView fitHeight="150.0" fitWidth="250.0"
									pickOnBounds="true" preserveRatio="true">
									<image>
										<Image url="@../Resources/Buttons/Types/normal.png" />
									</image>
								</ImageView>
							</children>
						</HBox>
					</children>
				</StackPane>
			</bottom>
		</BorderPane>
		<AmbientLight color="CHARTREUSE" lightOn="true" />
	</children>
</AnchorPane>
